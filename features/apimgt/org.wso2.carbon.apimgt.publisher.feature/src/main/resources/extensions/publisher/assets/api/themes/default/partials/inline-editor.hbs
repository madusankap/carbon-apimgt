<div id='inline-editor-container' class="row-fluid"  style='display:none;'>
    <form novalidate="novalidate" id='form-inline-editor' enctype="multipart/form-data" >
    <div class="alert alert-error" id="inlineError" style="display:none">
        <span id="inlineErrorSpan"></span>
    </div>
    <input id="inlineApiVersion" value={{assets.version}} type="hidden"/>
    <input id="inlineApiName" value={{assets.name}} type="hidden"/>
    <input id="inlineApiProvider" value={{assets.provider}} type="hidden"/>
    <input id="inlineDocPageId" value={{assets.id}} type="hidden"/>
    <input id="mode" value="" type="hidden"/>
    <input id="inlineDocName" value="" type="hidden"/>
    <input id="InlineShowVisibility" value="" type="hidden"/>
    <input id="InlineDocVisibility" value="" type="hidden"/>
    
    

    <div id="layout-base" class="container-fluid content-section" style="padding:20px">
        <div class="row-fluid">

            <div class="span12">
                <div id="apiDeatils">
                   <h2 class="inlineDocName"></h2>
                </div>
                <div class="alert alert-success" id="docAddMessage" style="display:none;width:62%">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <strong>Successfully added the Document Content.</strong>
                </div>
            </div>


            <div class="col-lg-12">

                <div class="col-lg-8">

                    <div>
                        <textarea id="inlineEditor" style="width:100%;height:500px;"></textarea>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div >
                        <table class="table table-bordered table-striped">
                            <thead>
                            <tr>
                               
                                <th>{{t "Version"}}</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>
                                    <code>
                                       
                                        {{assets.version}}
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
               
            </div>

            
            
            
            <div id="inlineButtonGroup" style='display:none;'>
                <div style="padding:10px 0;">
                    <button type="button" title="Save the changes to the document and stay in this tab" class="btn btn-primary" id="inline-apply-button" onclick="saveContent('{{assets.provider}}','{{assets.name}}','{{assets.version}}','apply')">{{t "Save"}}</button>
                    <button type="button" title="Save the document and close this tab" class="btn btn-primary" id="inline-save-button" onclick="saveContent('{{assets.provider}}','{{assets.name}}','{{assets.version}}','save')">{{t "Save and Close"}}</button>
                    <button type="button" title="Cancel all the unsaved changes and close this tab"  class="btn" id="inline-cancel-button" onclick="window.close()">{{t "Cancel"}}</button>

                </div>
            </div>
                
        </div>
    </div>
    </form>
</div>